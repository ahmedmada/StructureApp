<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.basic.nanodegree.musicalstructureapp.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player"
        android:id="@+id/player"
        android:padding="20dp"
        android:gravity="left|center"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_headset_black_24dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Albums"
        android:id="@+id/albums"
        android:layout_weight="1"
        android:padding="20dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_library_music_black_24dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Play List"
        android:id="@+id/playList"
        android:padding="20dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_playlist_play_black_24dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favourit"
        android:layout_weight="1"
        android:id="@+id/fav"
        android:padding="20dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_favorite_black_24dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy"
        android:layout_weight="1"
        android:id="@+id/buy"
        android:padding="20dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"/>


</LinearLayout>
